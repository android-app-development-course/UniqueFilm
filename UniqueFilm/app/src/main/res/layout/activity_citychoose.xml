<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lyz.uniquefilm.CitychooseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/head"
        android:layout_weight="2"
        android:gravity="center">
        <Button
            android:id="@+id/btnret"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@mipmap/left2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:id="@+id/svcity"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:iconifiedByDefault="false"
            android:queryHint="搜索城市..."
            android:background="#ffffff">
        </SearchView>


    </LinearLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="当前城市:"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/currentcity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="广州"
                android:layout_weight="1"
                android:layout_marginTop="7dp"
                android:textSize="20sp"

                android:background="@drawable/city_btn"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/currentcity"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="热门城市："
                android:textSize="20sp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="北京"
                    android:textSize="20sp"
                    android:background="@drawable/city_btn"
                    android:id="@+id/hotcity1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="上海"
                    android:textSize="20sp"
                    android:id="@+id/hotcity2"
                    android:background="@drawable/city_btn"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="深圳"
                    android:textSize="20sp"
                    android:id="@+id/hotcity3"
                    android:background="@drawable/city_btn"/>
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp">


    </LinearLayout>


</LinearLayout>
