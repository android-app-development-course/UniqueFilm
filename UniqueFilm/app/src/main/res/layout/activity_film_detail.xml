<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyz.uniquefilm.FilmDetailActivity">


    <TableRow
        android:id="@+id/tr_cover"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        >


        <ImageView
            android:id="@+id/iv_poster"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_yeargenres"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_countrylanguage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_runtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_director"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_actors"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_releasetime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_alsoknown"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_margin="20dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_rate_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#6E6E6E"
                    android:gravity="center"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center">


        <Button
            android:id="@+id/filmdetail_collect"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#7d75af"
            android:text="收藏"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/filmdetail_setscore"
            android:layout_weight="4"
            android:text="评分"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:textColor="#7d75af"
            android:layout_marginRight="20dp"/>


    </TableRow>
    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:autoLink="all"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/btn_getcinema"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="上映影院"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"/>
    </TableRow>

</TableLayout>
