<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyz.uniquefilm.FilmDetailActivity">


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:background="#C1CDC1"
        >


        <ImageView

            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/filmexa" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="温室里的加穗子"
                android:textSize="30sp" />
            <TextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:text="简介"
                android:textSize="20sp" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_margin="20dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="评分"
                    android:gravity="center"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/movie_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/data_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#6E6E6E"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"/>
        <Button
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="收藏"
            android:textSize="20sp"
            android:textColor="#7d75af"
            android:background="@drawable/btnstyle"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_weight="2"
            android:text="评分"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:textColor="#7d75af"
            android:background="@drawable/btnstyle"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </TableRow>
    <TableRow

        android:clickable="true"
        android:focusable="true"
        android:layout_margin="20dp"
        >
        <TextView

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="选座购票"
            android:textSize="20sp"
            android:textColor="#000000"
            android:autoLink="all"
            />
        <TextView

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="价格 >"
            android:autoLink="all"
            android:textColorLink="#000000"/>

    </TableRow>
    <TableRow
        android:layout_weight="1">

    </TableRow>


</TableLayout>
